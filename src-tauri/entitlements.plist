<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Store Sandbox -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Network access for web content -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File access for PDFs -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Access to Downloads folder (common PDF location) -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allow JIT compilation for better Tauri performance -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory (needed for some web engines) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
</dict>
</plist>